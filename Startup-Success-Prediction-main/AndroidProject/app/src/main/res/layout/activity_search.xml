<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.SearchActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/search_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_regular"
                        android:text="Welcome"
                        android:textSize="25sp"
                        android:textStyle="bold">

                    </TextView>


                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/logoutBtn"
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/red_btn"
                    android:elevation="3dp"
                    android:fontFamily="@font/ubuntu_regular"
                    android:text="Logout"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp">

                </androidx.appcompat.widget.AppCompatButton>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp">

                <TextView
                    android:id="@+id/search_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_regular"
                    android:text="Email ID"
                    android:textSize="18sp">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:paddingHorizontal="12dp"
                android:paddingVertical="10dp">

                <!--startup_name-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_regular"
                    android:text="Startup Name"
                    android:textSize="18sp"

                    android:textStyle="bold">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/stp_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/input_box"
                        android:elevation="3dp"
                        android:fontFamily="@font/ubuntu_regular"
                        android:hint="Enter name"
                        android:paddingLeft="15dp"
                        android:textColor="@color/text_color"
                        android:textColorHint="#A7A7A7"
                        android:textSize="18sp">

                    </EditText>

                </LinearLayout>
                <!--startup_name-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:weightSum="6">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="4"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_regular"
                            android:text="Category"
                            android:textSize="18sp"
                            android:textStyle="bold">

                        </TextView>

                        <Spinner
                            android:id="@+id/stp_category"
                            style="@style/Widget.AppCompat.Light.DropDownItem.Spinner"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/input_box"
                            android:elevation="3dp"
                            android:fontFamily="@font/ubuntu_regular"
                            android:hint="Clusters"
                            android:layout_marginHorizontal="2dp"

                            android:paddingLeft="15dp"
                            android:spinnerMode="dropdown"
                            android:textColor="@color/text_color"
                            android:textColorHint="#A7A7A7"
                            android:textSize="18sp">

                        </Spinner>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="2"
                        android:gravity="center"

                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/ubuntu_regular"
                            android:text="Age"
                            android:textSize="18sp"
                            android:textStyle="bold">

                        </TextView>

                        <EditText
                            android:id="@+id/stp_age"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="2dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/input_box"
                            android:elevation="3dp"
                            android:fontFamily="@font/ubuntu_regular"
                            android:hint="value"
                            android:inputType="numberDecimal"
                            android:textAlignment="center"
                            android:textColor="@color/text_color"
                            android:textColorHint="#A7A7A7"
                            android:textSize="18sp">

                        </EditText>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="2"
                        android:gravity="center"

                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/ubuntu_regular"
                            android:text="Avg Participant"
                            android:textSize="17sp"
                            android:textStyle="bold">

                        </TextView>

                        <EditText
                            android:id="@+id/stp_avg_participants"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="2dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/input_box"
                            android:elevation="3dp"
                            android:fontFamily="@font/ubuntu_regular"
                            android:hint="value"
                            android:inputType="numberDecimal"
                            android:textAlignment="center"
                            android:textColor="@color/text_color"
                            android:textColorHint="#A7A7A7"
                            android:textSize="18sp">

                        </EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/ubuntu_regular"
                            android:text="Relations"
                            android:textSize="18sp"
                            android:textStyle="bold">

                        </TextView>

                        <EditText
                            android:id="@+id/stp_relation"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="2dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/input_box"
                            android:elevation="3dp"
                            android:fontFamily="@font/ubuntu_regular"
                            android:hint="value"
                            android:inputType="numberDecimal"
                            android:textAlignment="center"
                            android:textColor="@color/text_color"
                            android:textColorHint="#A7A7A7"
                            android:textSize="18sp">

                        </EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/ubuntu_regular"
                            android:text="Milestones"
                            android:textSize="18sp"
                            android:textStyle="bold">

                        </TextView>

                        <EditText
                            android:id="@+id/stp_milestone"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="2dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/input_box"
                            android:elevation="3dp"
                            android:fontFamily="@font/ubuntu_regular"
                            android:hint="value"
                            android:inputType="numberDecimal"
                            android:textAlignment="center"
                            android:textColor="@color/text_color"
                            android:textColorHint="#A7A7A7"
                            android:textSize="18sp">

                        </EditText>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/ubuntu_regular"
                            android:text="First mils. Age"
                            android:textSize="18sp"
                            android:textStyle="bold">

                        </TextView>

                        <EditText
                            android:id="@+id/stp_mile_age01"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="2dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/input_box"
                            android:elevation="3dp"
                            android:fontFamily="@font/ubuntu_regular"
                            android:hint="value"
                            android:inputType="numberDecimal"
                            android:textAlignment="center"
                            android:textColor="@color/text_color"
                            android:textColorHint="#A7A7A7"
                            android:textSize="18sp">

                        </EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/ubuntu_regular"
                            android:text="Last mils. Age"
                            android:textSize="18sp"
                            android:textStyle="bold">

                        </TextView>

                        <EditText
                            android:id="@+id/stp_mile_age02"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="2dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/input_box"
                            android:elevation="3dp"
                            android:fontFamily="@font/ubuntu_regular"
                            android:hint="value"
                            android:inputType="numberDecimal"
                            android:textAlignment="center"
                            android:textColor="@color/text_color"
                            android:textColorHint="#A7A7A7"
                            android:textSize="18sp">

                        </EditText>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/ubuntu_regular"
                    android:text="Investments:"
                    android:textSize="18sp"
                    android:textStyle="bold">

                </TextView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/ubuntu_regular"
                            android:text="Total Funding"
                            android:textSize="18sp"
                            android:textStyle="bold">

                        </TextView>

                        <EditText
                            android:id="@+id/stp_total_fund"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="2dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/input_box"
                            android:elevation="3dp"
                            android:fontFamily="@font/ubuntu_regular"
                            android:hint="value"
                            android:inputType="numberDecimal"
                            android:textAlignment="center"
                            android:textColor="@color/text_color"
                            android:textColorHint="#A7A7A7"
                            android:textSize="18sp">

                        </EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/ubuntu_regular"
                            android:text="Funding Round"
                            android:textSize="18sp"
                            android:textStyle="bold">

                        </TextView>

                        <EditText
                            android:id="@+id/stp_fund_round"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="2dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/input_box"
                            android:elevation="3dp"
                            android:fontFamily="@font/ubuntu_regular"
                            android:hint="value"
                            android:inputType="numberDecimal"
                            android:textAlignment="center"
                            android:textColor="@color/text_color"
                            android:textColorHint="#A7A7A7"
                            android:textSize="18sp">

                        </EditText>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/ubuntu_regular"
                            android:text="First fund. Age"
                            android:textSize="18sp"
                            android:textStyle="bold">

                        </TextView>

                        <EditText
                            android:id="@+id/stp_fund_age01"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="2dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/input_box"
                            android:elevation="3dp"
                            android:fontFamily="@font/ubuntu_regular"
                            android:hint="value"
                            android:inputType="numberDecimal"
                            android:textAlignment="center"
                            android:textColor="@color/text_color"
                            android:textColorHint="#A7A7A7"
                            android:textSize="18sp">

                        </EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/ubuntu_regular"
                            android:text="Last Fund. Age"
                            android:textSize="18sp"
                            android:textStyle="bold">

                        </TextView>

                        <EditText
                            android:id="@+id/stp_fund_age02"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="2dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/input_box"
                            android:elevation="3dp"
                            android:fontFamily="@font/ubuntu_regular"
                            android:hint="value"
                            android:inputType="numberDecimal"
                            android:textAlignment="center"
                            android:textColor="@color/text_color"
                            android:textColorHint="#A7A7A7"
                            android:textSize="18sp">

                        </EditText>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <CheckBox
                        android:id="@+id/checkBox_angel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:fontFamily="@font/ubuntu_regular"
                        android:text="Angel Investor"
                        android:textColor="@color/text_hint_color"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <CheckBox
                        android:id="@+id/checkBox_vc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:fontFamily="@font/ubuntu_regular"
                        android:text="Venture Capital"
                        android:textColor="@color/text_hint_color"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="8">

                    <CheckBox
                        android:id="@+id/checkBox_roundA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:fontFamily="@font/ubuntu_regular"
                        android:text="RoundA"
                        android:textColor="@color/text_hint_color"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <CheckBox
                        android:id="@+id/checkBox_roundB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:fontFamily="@font/ubuntu_regular"
                        android:text="RoundB"
                        android:textColor="@color/text_hint_color"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <CheckBox
                        android:id="@+id/checkBox_roundC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:fontFamily="@font/ubuntu_regular"
                        android:text="RoundC"
                        android:textColor="@color/text_hint_color"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <CheckBox
                        android:id="@+id/checkBox_roundD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:fontFamily="@font/ubuntu_regular"
                        android:text="RoundD"
                        android:textColor="@color/text_hint_color"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </LinearLayout>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_predict"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/password"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/blue_btn"
                    android:elevation="3dp"
                    android:fontFamily="@font/ubuntu_regular"
                    android:text="Predict Success"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"></androidx.appcompat.widget.AppCompatButton>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="42dp"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textID_prediction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/ubuntu_regular"
                    android:text="Fill up the form to get predicted"
                    android:textSize="18sp"
                    android:textStyle="bold">

                </TextView>


            </LinearLayout>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</RelativeLayout>